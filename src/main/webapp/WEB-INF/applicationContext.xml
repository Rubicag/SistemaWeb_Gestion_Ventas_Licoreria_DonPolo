<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- DataSource -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/tu_base_de_datos"/>
        <property name="username" value="tu_usuario"/>
        <property name="password" value="tu_contraseÃ±a"/>
    </bean>

    <!-- JdbcTemplate -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- DAO -->
    <bean id="usuarioDAO" class="com.mycompany.dao.UsuarioDAO">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <!-- Service -->
    <bean id="usuarioService" class="com.mycompany.service.UsuarioService">
        <constructor-arg ref="usuarioDAO"/>
    </bean>
    <!-- DAO -->
<bean id="clienteDAO" class="com.mycompany.dao.ClienteDAO">
    <constructor-arg ref="jdbcTemplate"/>
</bean>

<bean id="ventaDAO" class="com.mycompany.dao.VentaDAO">
    <constructor-arg ref="jdbcTemplate"/>
</bean>

<!-- Service -->
<bean id="clienteService" class="com.mycompany.service.ClienteService">
    <constructor-arg ref="clienteDAO"/>
</bean>

<bean id="ventaService" class="com.mycompany.service.VentaService">
    <constructor-arg ref="ventaDAO"/>
</bean>

</beans>

