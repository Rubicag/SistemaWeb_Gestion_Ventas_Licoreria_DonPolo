<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Configuración del DataSource -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource">
        <property name="driverClassName" value="com.mysql.cj.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3306/tu_base_de_datos"/>
        <property name="username" value="tu_usuario"/>
        <property name="password" value="tu_contraseña"/>
        <property name="maxTotal" value="50"/>
    </bean>

    <!-- Configuración de JdbcTemplate -->
    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!-- Configuración del DAO -->
    <bean id="productoDAO" class="com.mycompany.dao.ProductoDAO">
        <constructor-arg ref="jdbcTemplate"/>
    </bean>

    <!-- Configuración del Service -->
    <bean id="productoService" class="com.mycompany.service.ProductoService">
        <constructor-arg ref="productoDAO"/>
    </bean>
    <beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
    
    <!-- Configuración de Spring MVC -->
    <bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix" value="/WEB-INF/views/"/>
        <property name="suffix" value=".jsp"/>
    </bean>

    <!-- Configuración de los controladores -->
    <context:component-scan base-package="com.mycompany.controller"/>
    
</beans>


</beans>
